<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="50dp">
    <ImageView
            android:id="@+id/commentviewItem_imageview_profile"
            android:layout_margin="7.5dp"
            tools:src="@mipmap/ic_launcher"
            android:layout_width="35dp"
            android:layout_height="35dp"/>
    <TextView
            android:id="@+id/commentviewItem_textview_date"
            android:layout_marginEnd="7.5dp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            tools:text="작성 날짜"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <TextView
            android:id="@+id/commentviewItem_textview_profile"
            tools:text="이메일"
            android:textSize="12dp"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">
        <Space android:layout_width="50dp"
               android:layout_height="match_parent"/>
        <TextView
                android:id="@+id/commentviewItem_textview_comment"
                tools:text="메세지"
                android:textColor="@android:color/black"
                android:layout_marginBottom="7.5dp"
                android:textSize="17dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorDivision"/>

</LinearLayout>